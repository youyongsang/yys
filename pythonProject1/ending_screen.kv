<EndingScreen>:
    name: 'endingscreen'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.65)
            padding: 20

            Image:
                source: 'public/image/ending_screen/background.jpg'
                size_hint_y: 1
                allow_stretch: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.35)

            BoxLayout:
                size_hint: (0.8, 1)
                padding: 40

                Label:
                    id: ending_label
                    text: ''
                    text_size: self.width, None
                    font_name: 'NanumGothic.ttf'
                    font_size: 24
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.2, 1)
                padding: 20
                id: ending_button_box